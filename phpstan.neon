includes:
    - vendor/larastan/larastan/extension.neon
    - vendor/nesbot/carbon/extension.neon

parameters:
    paths:
        - app/

    level: 8
    treatPhpDocTypesAsCertain: false

    # Report unused ignore entries
    reportUnmatchedIgnoredErrors: false

    # Ignore covariant return type issues for repository interfaces and relationships
    ignoreErrors:
        - '#Return type.*of method.*paginate\(\) should be compatible#'
        - '#Method.*should return.*BelongsToMany.*but returns#'
        - '#Method.*should return.*MorphToMany.*but returns#'
        - '#Return type.*LengthAwarePaginator.*is not covariant with return type.*LengthAwarePaginator#'
        - '#Function (form|multiselect|outro) not found#'
        # Ignore errors in NonExistentStubModule (test module)
        - '#NonExistentStubModule.*#'
        - '#Call to method execute\(\) on an unknown class#'
        - '#Call to static method fromRequest\(\) on an unknown class#'
        - '#Parameter.*of method.*NonExistentStubModule.*#'
        # Ignore errors in FakeNonExistentModule (test module)
        - '#FakeNonExistentModule.*#'
        - '#.*FakeNonExistentModule.*class\.notFound#'
        - '#.*FakeNonExistentModule.*property\.notFound#'